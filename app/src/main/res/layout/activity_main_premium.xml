<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".PremiumActivity"
    tools:layout_editor_absoluteY="81dp">


    <!--  logotipo premium  -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/agrohelpremium"
        app:layout_constraintBottom_toTopOf="@+id/textoversaopremium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <!--  frase do logotipo premium  -->
    <TextView
        android:id="@+id/textoversaopremium"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="sans-serif"
        android:text="ADQUIRA A VERSÃO PREMIUM"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24dp"
        android:textStyle="bold"
        android:typeface="normal"
        tools:layout_editor_absoluteY="146dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!--  frase da primeira imagem   -->
    <TextView
        android:id="@+id/percentual"
        android:layout_width="134dp"
        android:layout_height="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Participação"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        tools:layout_editor_absoluteX="31dp" />


    <!--  primeira imagem do cifrão  -->
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="133dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/percentual"
        app:layout_constraintTop_toBottomOf="@+id/textoversaopremium"
        tools:layout_editor_absoluteX="32dp" />


    <!--  segunda imagem dinheiro na mão  -->
    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="157dp"
        android:layout_height="67dp"
        android:src="@drawable/lucro"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        tools:layout_editor_absoluteX="203dp" />
    <!--  frase da segunda imagem   -->
    <TextView
        android:id="@+id/gereciamento"
        android:layout_width="160dp"
        android:layout_height="23dp"
        android:background="@color/colorPrimaryDark"
        android:text="Gerenciamento "
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        tools:layout_editor_absoluteX="201dp" />

    <!--  terceira imagem geolocalização  -->
    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="142dp"
        android:layout_height="66dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/geolocalizacao"
        app:layout_constraintTop_toBottomOf="@+id/percentual"
        tools:layout_editor_absoluteX="31dp" />


    <!--  frase da terceira imagem   -->
    <TextView
        android:id="@+id/geolocalizacao"
        android:layout_width="143dp"
        android:layout_height="23dp"
        android:background="@color/colorPrimaryDark"
        android:text="Geolocalização  "
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView12"
        tools:layout_editor_absoluteX="32dp" />

    <!--  frase da quarta imagem   -->
    <TextView
        android:id="@+id/geolocalizacao2"
        android:layout_width="131dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="Suporte Online"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@+id/geolocalizacao"
        tools:layout_editor_absoluteX="220dp" />
    <!--  quarta imagem suporte 24 horas   -->
    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="131dp"
        android:layout_height="73dp"
        android:src="@drawable/tecnologia"
        app:layout_constraintTop_toTopOf="@+id/imageView12"
        tools:layout_editor_absoluteX="220dp" />


    <!--  botao comprar   -->
    <Button
        android:id="@+id/buttoncomprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="102dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="99dp"
        android:background="@drawable/btn_redondo"
        android:backgroundTint="@android:color/holo_orange_light"
        android:onClick="comprarVersaoPremium"
        android:padding="10dp"
        android:shadowRadius="20"
        android:text="Comprar Versão Premium"
        android:textColor="@color/White"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geolocalizacao2" />

</android.support.constraint.ConstraintLayout>